<?xml version="1.0" encoding="UTF-8"?>
<web-app 
  xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0">
  
  	<!-- Connexion -->
	<servlet>
	    <servlet-name>TrackServlet</servlet-name>
	    <servlet-class>servlet.track.TrackServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TrackServlet</servlet-name>
		<url-pattern>/connect</url-pattern>
	</servlet-mapping>
	
	<!-- Admin -->
	<servlet>
	    <servlet-name>AdminServlet</servlet-name>
	    <servlet-class>servlet.admin.AdminServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AdminServlet</servlet-name>
		<url-pattern>/admin</url-pattern>
	</servlet-mapping>
	
	<!-- HoneyPot -->
	<servlet>
		<servlet-name>HoneyBotServlet</servlet-name>
		<servlet-class>servlet.honeybot.HoneyBotServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>HoneyBotServlet</servlet-name>
		<url-pattern>/honeybot</url-pattern>
	</servlet-mapping>

	<!-- Index -->
	<welcome-file-list>
	    <welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>